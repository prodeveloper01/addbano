<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logolayout4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:background="@drawable/f4_line"
            android:backgroundTint="@color/purple_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_f4_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/f4_left_bg"
                    android:backgroundTint="@color/purple_200"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_emaillayout4"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_email_24"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_emaillayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="companyemail@gmail.com"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:id="@+id/ll_f4_call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/f4_right_bg"
                    android:backgroundTint="@color/purple_200"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_calllayout4"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_call_24"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_mobilenumberlayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:text="+91 987654321"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_f4_web"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:background="#58585a"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_weblayout4"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="11dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_web"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/tv_websitelayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.companywebsite.com"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>